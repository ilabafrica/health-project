<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- CustomButton -->
    <style name="CustomButton">
        <item name="android:width">170dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/roundbutton</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <!-- CustomButton -->
    <style name="CustomFinalButton">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/roundbutton</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CustomAddLabel">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">30dip</item>
    </style>

    <style name="CustomHeadingTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/mid_green</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
